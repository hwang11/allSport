<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.teamSupport.allSport.dao.MeetBookmarkMapper">
    <select id="findAllMeetBookmark" resultType="com.teamSupport.allSport.dto.MeetBookmark">
        SELECT * FROM MeetBookmark;
    </select>
    <select id="findByUserKey" parameterType="java.lang.String" resultType="com.teamSupport.allSport.dto.MeetBookmark">
        SELECT * FROM MeetBookmark WHERE user_key = #{user_key}
    </select>
    <select id="findByIdMeetBookmark" parameterType="java.lang.Integer" resultType="com.teamSupport.allSport.dto.MeetBookmark">
        SELECT * FROM MeetBookmark WHERE idMeetBookmark = #{idMeetBookmark}
    </select>
    <select id="getLast" resultType="java.lang.Integer">
        SELECT MAX(idMeetBookmark) FROM MeetBookmark
    </select>
    <insert id="insertMeetBookmark"> 
        INSERT INTO MeetBookmark VALUES (#{idMeetBookmark}, #{user_key}, #{idMeeting})
    </insert>
    <delete id="deleteMeetBookmark" parameterType="java.lang.Integer">
    	DELETE FROM MeetBookmark WHERE idMeetBookmark = #{idMeetBookmark}
    </delete>
    <delete id="deleteByUserKey" parameterType="java.lang.String">
    	DELETE FROM MeetBookmark WHERE user_key = #{user_key}
    </delete>
</mapper>
